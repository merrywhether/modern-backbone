{
  "name": "modern-backbone",
  "version": "1.0.0",
  "description": "Getting started with backbone, the modern way",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/merrywhether/modern-backbone.git"
  },
  "author": "Risto Keravuori",
  "license": "ISC",
  "homepage": "https://github.com/merrywhether/modern-backbone",
  "scripts": {
    "build": "browserify src/app.js -t babelify -t hbsfy -o modern-backbone/app.js",
    "watch": "watchify src/app.js -v -d -t babelify -t hbsfy -o modern-backbone/app.js",
    "start": "serve -p 8010",
    "dev": "npm run watch & npm run start"
  },
  "dependencies": {
    "backbone": "^1.2.0",
    "handlebars": "^3.0.3",
    "jquery": "^2.1.4",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babelify": "^6.1.1",
    "browserify": "^10.2.1",
    "hbsfy": "^2.2.1",
    "serve": "^1.4.0",
    "watchify": "^3.2.1"
  }
}
